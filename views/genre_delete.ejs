<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') -%> 
    <body>
        <div class="container-fluid">
            <div class="row">
                <%- include('partials/sidebar') -%> 
                <div class="col-sm-10">
                    <h1><%= title %> <%= genre.name %> </h1>
                    <% if (books.length > 0) { %>
                        <p class="text-danger">Must delete the following books before deleting this genre: </p>
                         <% books.forEach(book => {%>
                            <a href="<%= '../../book/' + book._id %> ""><strong><%= book.title %> </strong></a> <br>
                        <% }) %> 
                    <% } else {%> 
                        <p>Are you sure you want to delete this genre?</p>
                        <form action="" method="post">
                            <div class="form-group">
                                <input 
                                    type="hidden"
                                    name="genreid"
                                    value=<%= genre._id %> 
                                    id="genreid"
                                    required
                                    >
                            </div>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    <% } %> 
                </div>
            </div>
        </div>
    </body>
</html>