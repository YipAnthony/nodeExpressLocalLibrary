<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') -%> 
    <body>
        <div class="container-fluid">
            <div class="row">
                <%- include('partials/sidebar') -%> 
                <div class="col-sm-10">
                  <h1><%= title %> </h1>

                  <form action="" method="post">
                        <div class="form-group">
                            <label for="first_name">First Name:</label>
                            <input 
                                type="text" 
                                id="first_name" 
                                class="form-control" 
                                name="first_name" 
                                placeholder="John" 
                                required=true
                                value="<%= author === undefined ? "": author.first_name %> "
                            >
                            <label for="family_name">Family Name:</label>
                            <input 
                                type="text" 
                                id="family_name" 
                                class="form-control" 
                                name="family_name" 
                                placeholder="Smith" 
                                required=true
                                value="<%= author === undefined ? "": author.family_name %> "
                            >
                        </div>
                        <div class="form-group">
                            <label for="date_of_birth">Date of birth: </label>
                            <input 
                                type="date" 
                                id="date_of_birth" 
                                class="form-control"
                                value="<%= author === undefined ? "": author.dateBornFormatted %>"
                            >
                            <label for="date_of_death">Date of death: </label>
                            <input 
                                type="date" 
                                id="date_of_death" 
                                class="form-control"
                                value="<%= author === undefined ? "": author.dateDeathFormatted %>"
                            >
                        </div>
                        <button class="btn btn-primary" type="submit">Submit</button>
                  </form>

                  <% if (errors) { %>
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error.msg %> </li>
                        <% }) %> 
                    </ul>
                  <% } %> 
                </div>
            </div>
        </div>
    </body>
</html>